{% extends 'base.html.twig' %}

{% block title %}Acceuil
{% endblock %}

{% block body %}

	<div class="row-fluid top30 pagetitle">
			
		<div class="containere ">
			<svg viewBox="0 0 500 500" preserveAspectRatio="xMinYMin meet">
				<path d="M0,40 C75,90 125,0 500,50 L500,00 L0,0 Z" style="stroke: none; fill:rgb(249,220,0)"></path>
			</svg>
			<H1>Le fait maison chez vous !</H1>
		</div>
		<div class="container">
			<div class="row">
	<h2 class="p-4 title text-center">Tous les specialites</h2>

				{%for cat in categories%}
<div class="col-3">
	<div class="card shadow-sm" style="width: 25rem;">
		<img src="{{cat.iamgeUrl}}" class="card-img-top " style="width:100%; height: 200px; overflow: hidden;" alt="...">
		<div class="card-body">
		  <h5 class="card-title m-3">{{cat.nom}}</h5>
		  <a href="#" class="btn btn-primary my-3">Voir tous les annonces</a>
		</div>
	  </div>
	</div>
		{%endfor%}
</div>
<hr />
<div class="row">
	<h2 class="p-4 title text-center">Liste de derieres annoces</h2>
	{%for annonce in annonces%}
<div class="col-3">
<div class="card shadow-sm" style="width: 25rem;">
	{% if annonce.images is not empty %}
	{% for image in annonce.images %}
		{% if loop.first %}
			<img src="{{ asset('images/' ~ image.img) }}" class="card-img-top " style="width:100%; height: 200px; overflow: hidden;" alt="...">
		{% endif %}
	{% endfor %}
{% endif %}

<div class="card-body">
<h5 class="card-title">{{annonce.titre}}</h5>
<p>{{annonce.resume()}}</p>
<a href="#" class="btn btn-primary">Go somewhere</a>
</div>
</div>
</div>
{%endfor%}

	</div>






{% endblock %}
