		<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
		<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
		<link rel="preconnect" href="https://fonts.googleapis.com"/>
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin/>
		<link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,400;0,500;0,700;1,400;1,700&display=swap" rel="stylesheet"/>
		<link rel="icon" href="{{ asset('icons/favicon.ico') }}"/>
		<link rel="stylesheet" href="{{ asset('css/style.css') }}" type="text/css"/> {% block css %}{% endblock %}
		</head>
		<body>
			<div class="contenair">
				<div class="m-4">
					<nav class="navbar navbar-expand-sm navbar-dark bg-dark">
						<div class="container-fluid">
							<a href="/" class="navbar-brand logo ps-5">
								<img src="{{ asset('logo.svg') }}" class="rounded" alt="logo"/></a>
							<button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
								<span class="navbar-toggler-icon"></span>
							</button>
							<div id="navbarCollapse" class="collapse navbar-collapse">
								<ul class="nav navbar-nav">
									<li class="nav-item">
										<a href="/" class="nav-link">
											<i class="fa fa-home" aria-hidden="true">
												Accueil
											</i>
										</a>
									</li>
									<li class="nav-item">
										<a href="{{ path('create_annonce') }}" class="nav-link">Déposer une annonce
											<i class="fa fa-plus-square fa-xl" aria-hidden="true"></i>
										</a>
									</li>
									<li class="nav-item">
										<a href="{{ path('create_annonce') }}" class="nav-link">Recherche
											<i class="fa fa-magnifying-glass fa-xl"></i>
										</a>
									</li>
									{% if app.user %}
										<li class="nav-item dropdown">
											<a href="{{ path('app_profile') }}" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">
												Bienvenue
												{{ app.user.pseudo }}
												!</a>

											<div class="dropdown-menu">
												<a href="{{ path('app_profile') }}" class="dropdown-item">Mon profile</a>

												<a href="{{path('app_editProfile', {user: app.user.id})}}" class="dropdown-item">Modifier mon profile</a>

												<a href="#" class="dropdown-item">Modifier mon mot de passer</a>

												<a href="#" class="dropdown-item">modifier mon email</a>
												<div class="dropdown-divider"></div>
												<a href="{{ path('app_logout') }}" class="dropdown-item">Déconnexion</a>

											</div>
										</li>

									</div>
								</ul>
{% if app.user.avatar is not empty %}
											<li class="nav-item">
												<a class="nav-link" href="{{ path('app_profile')}}">
													<img src="{{asset('avatars/' ~ app.user.avatar) }}" class="img-fluid avatar rounded" alt=""/>
												</a>
											</li>
										{% else %}
											<li class="nav-item">
												<a class="nav-link" href="{{ path('app_profile')}}"><img src="https://images.assetsdelivery.com/compings_v2/thesomeday123/thesomeday1231712/thesomeday123171200009.jpg" class="img-fluid avatar rounded" alt=""/></a>
											</li>
							{% endif %}
              <ul class="nav navbar-nav ms-auto">
                <li class="nav-item dropdown">
                  <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">Admin</a>
                  <div class="dropdown-menu dropdown-menu-end">
                    <a href="#" class="dropdown-item">Reports</a>
                    <a href="#" class="dropdown-item">Settings</a>
                    <div class="dropdown-divider"></div>
                    <a href="#" class="dropdown-item">Logout</a>
                  </div>
                </li>
                {% else %}
																																											<li class="nav-item">
																																												<a class="nav-link" href="{{ path('app_login') }}">Compte</a>
																																											</li>
              </ul>

              {% endif %}
            </div>
          </div>
        </nav>

{% for error in app.flashes('errors') %}
	<div class="alert alert-danger alert-dismissible fade show" role="alert">
		<button type="button" class="close" data-dismiss="alert" aria-label="Close">
			<span aria-hidden="true">&times;</span>
		</button>
		<strong>Erreur</strong>
		{{ error }}
	</div>
{% endfor %}
{% for error in app.flashes('success') %}
	<div class="alert alert-success alert-dismissible fade show" role="alert">
		<button type="button" class="close" data-dismiss="alert" aria-label="Close">
			<span aria-hidden="true">&times;</span>
		</button>
		<strong>Succès</strong>
		{{ error }}
	</div>
{% endfor %}
<main>
	{% block body %}{% endblock %}
</main></body></html></div><footer class="text-center text-lg-start bg-light text-muted"><section class="d-flex justify-content-center container justify-content-lg-between p-4 border-bottom"><div class="me-5 d-none d-lg-block">
