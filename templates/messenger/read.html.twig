{% extends 'base.html.twig' %}

{% block title %}Messagerie
{% endblock %}

{% block body %}
	<section class="container">
		<div class="row">
			<div class="col-12">
				<h1>Messagerie</h1>
                <p>Message de {{ message.envoyeur.email }}</p>
                <p>Le {{ message.date|date }}</p>
                <div>{{ message.contenue }}</div>
				<div class="d-flex justify-content-end">
					<a href="#ajout-reponse" data-reply data-id="{{message.id}}"><i class="fas fa-reply"></i>
						Répondre</a>
				</div>
                <a href="{{path('messenger_received')}}" class="btn btn-primary">Retour à la boite de réception</a>
			</div>
		</div>
	</section>
{% endblock %}