{% extends 'base.html.twig' %}

{% block title %}
	{{app.user.nom ~' '~ app.user.prenom }}
{% endblock %}
{% block css %}
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<link rel="stylesheet" href="{{asset('css/sidebar.css')}}">

{% endblock %}

{% block body %}
<div class="overflow">
<div class="profile">
<!-- Sidebar -->
<div class="w3-sidebar w3-light-grey w3-bar-block flex-1" style="width:20%">
	<h3 class="w3-bar-item">Menu</h3>
	<a href="{{path('app_info')}}" class="w3-bar-item w3-button">Mes informations</a>
	<a href="{{path('gererAdresse')}}" class="w3-bar-item w3-button">Gerer mon adresse</a>
	<a href="{{path('app_profile_annonces')}}" class="w3-bar-item w3-button">Mes annonces</a>
	<a href="#" class="w3-bar-item w3-button">Mes favoris</a>
	<a href="{{path('received')}}" class="w3-bar-item w3-button">Messagerie</a>
  </div>
	<div class="d-flex left ">
		{% if app.user.avatar is  empty %}
		{% if app.user.genre.id == 1 %}

			<img class="m-3 avatar-profile" src="{{asset('images/femme-avatar.svg') }}" alt="">
			{% elseif app.user.genre.id == 2 %}
			<img class="m-3 avatar-profile" src="{{asset('images/home-avatar.svg') }}" alt="">
			{% else %}
			<img class="m-3 avatar-profile" src="{{asset('avatars/'~ app.user.avatar)}}" alt="">
			{% endif %}
			{% else %}
			<img class="m-3 avatar-profile" src="{{asset('avatars/'~ app.user.avatar)}}" alt="">
		{% endif %}
		<H3>{{app.user.getNomEtPrenom()}}</H3>
		<p class="p-2">{{app.user.email}}</p>
		<p class="text-muted">
			<i class="bi bi-geo-alt-fill"></i>
			{{app.user.ville}}, France</p>
			{% if app.user.specialite is  not empty%}
			<h3>Mes specialites culinaires</h3>
			<div class="d-flex">
			{%for spec in app.user.specialite%}
			<div class="card" style="width: 18rem;">
				<img class="card-img-top " style="width:100%; height: 200px; overflow: hidden;"src="{{spec.imageUrl}}" class="card-img-top" alt="...">
				<div class="card-body">
				  <p class="card-text">{{spec.nom}}</p>
				</div>
			  </div>
			  {%endfor%}
			</div>
			  {%endif%}
			  <a href="{{path('app_ajoutSpecialite', {user: app.user.id})}}" class="btn btn-warning">
				<i class="fa fa-plus" aria-hidden="true"></i>
			  </a>  


</div>
	</div>
</div>
	{% endblock %}
