{% extends 'base.html.twig' %}

{% block title %}{{app.user.nom ~' '~ app.user.prenom }}{% endblock %}
{% block css %}
<link rel="stylesheet" href="{{asset("css/sidebar.css")}}">
{% endblock %}

{% block body %}

<div class="containair">
<div class="d-flex gap-4">
<div class="d-flex left">
{% if app.user.avatar is empty %}

<img class="m-3" src="https://images.assetsdelivery.com/compings_v2/thesomeday123/thesomeday1231712/thesomeday123171200009.jpg" alt="">

{% else %}
<img class="m-3" src="{{asset('avatars/'~ app.user.avatar)}}" alt="">

{% endif %}
<H3>{{app.user.getNomEtPrenom()}}</H3>
<p class="p-2">{{app.user.email}}</p>
<p class="text-muted"><i class="bi bi-geo-alt-fill"></i> {{app.user.ville}}, France</p>

</div>
<div class="middle">
<h2 class="coloredTitle m-4">Bienvenue {{app.user.prenom| capitalize }} !</h2>
<h3 class="m-5">Mes annonces: ({{app.user.annonces | length }})</h3>
{% for annonce in app.user.annonces %}
<a   href="{{path('details', {annonce: annonce.id})}}" class=" card   ">
 

<h3 class="coloredTitle mx-4 my-2">{{annonce.titre}}</h3>
<p class='mx-3'>{{ annonce.resume()}}</p>

                 

</a>
{% endfor %}
</div>




{% endblock %}
