{% extends 'base.html.twig' %}

{% block title %}Réinitialisation de mot de passe{% endblock %}

{% block body %}
{% for flash_error in app.flashes('reset_password_error') %}
<div class="alert alert-danger" role="alert">{{ flash_error }}</div>
{% endfor %}
<div class="row p-5 ">
    <div class='col-lg-6 col-md-6 col-sm-12 mx-auto'>
        <img style='width: 95%;' src="{{ asset('images/forgot.png') }}" alt="">
    </div>
    <div class="register col-lg-6 col-md-6 col-sm-12 mx-auto">
        <h2 class="mb-5 text-center">Réinitialisation de mot de passe</h2>

        {{ form_start(requestForm) }}
        {{ form_row(requestForm.email) }}
        <div class="m-4">
            <small>
                Entrez votre adresse e-mail et nous vous enverrons un
                lien pour réinitialiser votre mot de passe.
            </small>
        </div>
        <div class="row justify-content-between">
            <button class=" col-lg-4 col-md-4 col-sm-12 btn btn-primary my-3">Envoyer un e-mail</button>
            {{ form_end(requestForm) }}
            <ba href="{{path('app_login')}}" class=" col-lg-4 col-md-4 col-sm-12 btn btn-primary my-3">Se connecter</a>

                
        </div>
    </div>
</div>

{% endblock %}