{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <div class="container page">
        <div>
            <img src="{{ asset('images/login.png') }}" alt="">
        </div>
        <div class="register">
<form class="my-4"method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
          Tu est connecter en tant que {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}
    <h2 class="h3 mb-5 text-center font-weight-normal">Se connecter</h1>
    <label for="inputEmail">Email</label>
    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
    <label class="mt-3"for="inputPassword">Mot de passe</label>
    <div class="d-flex align-items-center">
    <input type="password" name="password" id="pass" class="form-control" autocomplete="current-password" required>
	

<div class="eye">
	<i id="eye" class="bi ms-2 bi-eye-slash" onclick="change()"></i>
</div>
    </div>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    
        {# Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html #}

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me">Se souvenir de moi
            </label>
        </div>


    <button class="btn btn-lg btn-primary" type="submit">
Connecxion    </button>
</form>
<a class="p-3" href="{{path('app_register')}}">Vous avez pas un compte?</a> 
<a  class="" href="{{path('app_forgot_password_request')}}">Mot de passe oublier?</a> 
</div>
</div>
<script src="{{asset('javascript/formulaire.js')}}"></script>

{% endblock %}
